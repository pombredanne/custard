<form>
    <fieldset>
      <p class="control-group">
        <label for="query" style="width: 222px">Username or email: <span class="pull-right muted" id="forgotten-shortname">Forgotten?</span></label>
        <input type="text" name="query" id="query" value="<%= @shortName or '' %>">
      </p>
      <p>
        <button type="submit" class="btn btn-primary" id="go">Get password reset link</button>
      </p>
    </fieldset>
</form>
